* {
    -unity-font-definition: resource('UI/Other/Jersey15-Regular');
}

.root {
    flex-direction: column;
    align-items: stretch;
    justify-content: flex-start;
    padding: 20px;
    height: 100%;
    width: 100%;
}

/* Titel */
.title {
    font-size: 60px;
    color: #FFFFFF;
    text-shadow: 2px 2px 3px rgba(0, 0, 0, 0.8);
    -unity-text-align: middle-center;
    -unity-font-style: bold;
    margin-bottom: 20px;
}

/* Spieler + Thumbnail */
.content-section {
    flex-direction: row;
    justify-content: space-between;
    align-items: stretch;
    flex-grow: 1;
}

.players-section {
    flex-direction: column;
    justify-content: space-evenly;
    flex-basis: 45%;
    background-image: url("project://database/Assets/Art/Sprites/Panels/panel.png");
    padding: 20px 15px;
    border-radius: 25px;
    border-width: 0px;
}

.player-row {
    display: none;
    height: 100px;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 15px;
    background-image: url("project://database/Assets/Art/Sprites/Panels/panel_inner.png");
    padding: 15px 20px;
    border-radius: 15px;
}

.player-name {
    font-size: 40px;
    color: #745136;
    flex-shrink: 0;
    overflow: hidden;
    text-overflow: ellipsis;
    width: 60%;
}

.ready-button {
    width: 100%;
    height: 60px;
    border-color: transparent;
    background-color: transparent;
    color: white;
    font-size: 26px;
    background-image: url("project://database/Assets/Art/Sprites/Buttons/green_default.png");
    text-shadow: 2px 2px 2px rgba(0, 0, 0, 0.8);
    -unity-text-align: upper-center;
}

.ready-button:active {
    background-image: url("project://database/Assets/Art/Sprites/Buttons/green_pressed.png");
    -unity-text-align: lower-center;
}

.ready-button.ready {
    background-image: url("project://database/Assets/Art/Sprites/Buttons/yellow_default.png");
}

.ready-button.ready:active {
    background-image: url("project://database/Assets/Art/Sprites/Buttons/yellow_pressed.png");
}

/* Thumbnail */
.thumbnail {
    flex-basis: 50%;
    justify-content: center;
    align-items: center;
    background-image: url("project://database/Assets/Art/Sprites/Panels/panel.png");
    border-radius: 25px;
    display: flex;
    border-width: 0px;
    margin-left: 20px;
}

.thumbnail-label {
    font-size: 32px;
    color: #745136;
}

/* Unterer Bereich */
.bottom-section {
    flex-direction: row;
    justify-content: space-between;
    margin-top: 20px;
}

/* Beschreibung links */
.description-section {
    flex-basis: 65%;
    background-image: url("project://database/Assets/Art/Sprites/Panels/panel.png");
    padding: 20px 15px;
    border-radius: 25px;
    border-width: 0px;
    margin-right: 10px;
}

.lorem-text {
    font-size: 24px;
    color: #745136;
    white-space: normal;
}

/* Steuerung rechts */
.controls-section {
    flex-basis: 30%;
    background-image: url("project://database/Assets/Art/Sprites/Panels/panel.png");
    padding: 20px 15px;
    border-radius: 25px;
    border-width: 0px;
    flex-direction: column;
}

.controls-title {
    font-size: 28px;
    color: #745136;
    -unity-font-style: bold;
    margin-bottom: 12px;
}

.controls-text {
    font-size: 22px;
    color: #745136;
    white-space: normal;
}

/* Screenshot thumbnail styling */
#Screenshot {
    background-image: resource('ceteris partybus');
    -unity-background-scale-mode: scale-to-fit;
}

#ready-status-display-label {
    font-size: 32px;
    color: #ffffff;
    text-shadow: 2px 2px 2px rgba(0, 0, 0, 0.8);
    -unity-text-align: middle-center;
    margin-top: 5px;
}

#ready-status-display {
    background-color: #e79e16;
    justify-content: center;
    align-items: center;
    border-radius: 20px;
    width: 100%;
}

#ready-status-display.ready {
    background-color: #7ec300;
}

#ready-container {
    flex-direction: row;
    align-items: flex-end;
    justify-content: center;
    width: 100%;
}